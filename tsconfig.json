{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": false,
    "outDir": "./",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "main.ts", "Module/**/*", "Scripts/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
